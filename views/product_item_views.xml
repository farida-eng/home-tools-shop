<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_product_item_tree" model="ir.ui.view">
    <field name="name">product.item.tree</field>
    <field name="model">product.item</field>
    <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="category_id"/>
            <field name="price"/>
            <field name="quantity"/>
            <field name="vendor_id"/>
            <field name="barcode"/>
            <field name="cost_price"/>
            <field name="sale_price"/>

        </list>
    </field>
</record>
    <!-- Form View -->
    <record id="view_product_item_form" model="ir.ui.view">
        <field name="name">product.item.form</field>
        <field name="model">product.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category_id"/>
                        <field name="price"/>
                        <field name="quantity"/>
                        <field name="category"/>
                        <field name="vendor_id"/>
                        <field name="barcode"/>
                        <field name="cost_price"/>
                        <field name="sale_price"/>

                    </group>
                    <group>
                        <field name="image" widget="image"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


</odoo>
