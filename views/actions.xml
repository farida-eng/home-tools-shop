<!-- Action to open the product.item tree view -->
<odoo>
    <record id="action_shop_sale" model="ir.actions.act_window">
        <field name="name">Shop Sale</field>
        <field name="res_model">product.item</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your products here.
            </p>
        </field>
    </record>
    <!-- Action -->
    <record id="action_product_customer" model="ir.actions.act_window">
        <field name="name">Product customer</field>
        <field name="res_model">product.customer</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_product_item" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.item</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your products here.
            </p>
        </field>
    </record>
</odoo>
