<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Root menu for your module -->
    <menuitem id="menu_home_tools_root" name="Home Tools Shop" sequence="10"/>

    <!-- Action to open the product.item tree view -->
    <record id="action_shop_sale" model="ir.actions.act_window">
        <field name="name">Shop Sale</field>
        <field name="res_model">product.item</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your products here.
            </p>
        </field>
    </record>

    <!-- Sales menu -->
    <menuitem id="menu_sale" name="Sales" parent="menu_home_tools_root" action="action_shop_sale" sequence="1"/>

</odoo>
